{
    "manifest_version": 3,
    "name": "Finding Inputs",
    "description": "Finding input fields inside the current active tab",
    "version": "1.0.0",
    "background": {
        "service_worker": "/background.js"
    },
    "icons": {
        "32": "icon32.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "permissions" : [
        "scripting","tabs","activeTab"
    ],
    "host_permissions" : [
        "https://*/*",
        "http://*/*"
    ]
}